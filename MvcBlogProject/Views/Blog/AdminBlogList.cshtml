@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>BlogID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Yorumlar</th>
        <th>Detaylar</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BlogID</td>
            <td>@x.BlogTitle</td>
            <td>@x.Category.CategoryName</td>
            <td>@(((DateTime)x.BlogDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Blog/GetCommentByBlog/@x.BlogID" class="btn btn-outline-primary">Yorumlar</a></td>
            <td><a href="/Blog/BlogDetails/@x.BlogID" class="btn btn-outline-info">Detaylar</a></td>
            <td><a href="/Blog/DeleteBlog/@x.BlogID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@x.BlogID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Blog/AddNewBlog/" class="btn btn-outline-success">Yeni Blog Ekle</a>