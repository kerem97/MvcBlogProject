@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateUserProfile", "User", FormMethod.Post))
    {

        foreach (var x in Model)
        {
          
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorID" value="@x.AuthorID">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorName" value="@x.AuthorName">
            </div>
        </div>


        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="AuthorMail" value="@x.AuthorMail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Ünvan</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorTitle" value="@x.AuthorTitle">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorAboutShort" value="@x.AuthorAboutShort">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">İletişim Bilgileri</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorPhoneNumber" value="@x.AuthorPhoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Profil Fotoğrafı</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorImage" value="@x.AuthorImage">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="AuthorPassword" value="@x.AuthorPassword">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrarı</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputSkills">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorAbout" value="@x.AuthorAbout">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Onayla</button>
            </div>
        </div>
    </form>
        }
    }
</div>