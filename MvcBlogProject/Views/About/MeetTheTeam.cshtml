@model IEnumerable<EntityLayer.Concrete.Author>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Yazarlarımız</h2>
                <p>Sizlere en güncel içerikleri sunan yazarlarımızın listesi aşağıda yer almaktadır.Siz de yazarımız olmak isterseniz iletişim kısmından bize ulaşabilirsiniz.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {


            <div class="col-md-6 col-lg-4 mb-5 text-center">
                <img src="@x.AuthorImage" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                <h2 class="mb-3 h5">@x.AuthorName </h2>
                <p>@x.AuthorAbout</p>

                <p class="mt-5">
                    <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                    <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                    <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                </p>
            </div>
            }
      
        </div>
    </div>
</div>
